<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="409dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/lsec_sno"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:hint="SNo"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lsec_stuid"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:hint="Student ID"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lsec_stuname"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:hint="Student Name"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lsec_bookid"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:hint="Book ID"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lsec_bookname"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:hint="Book Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lsec_authorname"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:hint="Author Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lsec_issuedate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:hint="Issue Date"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lsec_returnstatus"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:hint="Return Status"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/lsec_sendemailbtn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/send_email"
                android:textSize="15dp"
                android:background="@color/teal_200"
                android:layout_margin="2dp"/>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>