<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject : "
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <AutoCompleteTextView
                    android:id="@+id/fspqp_subject"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:completionThreshold="1"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:dropDownSelector="@color/purple_200"
                    android:background="@drawable/edittextbg"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department : "
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <AutoCompleteTextView
                    android:id="@+id/fspqp_department"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:dropDownSelector="@color/purple_200"
                    android:completionThreshold="1"
                    android:background="@drawable/edittextbg"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semester : "
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <AutoCompleteTextView
                    android:id="@+id/fspqp_sem"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:dropDownSelector="@color/purple_200"
                    android:completionThreshold="1"
                    android:background="@drawable/edittextbg"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year : "
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <AutoCompleteTextView
                    android:id="@+id/fspqp_year"
                    android:layout_width="200dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:dropDownSelector="@color/purple_200"
                    android:completionThreshold="1"
                    android:background="@drawable/edittextbg"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
            <Button
                android:id="@+id/fspqp_addbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@color/teal_200"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear3"
            android:padding="15dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fspqp_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/fspqp_simpleProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</ScrollView>