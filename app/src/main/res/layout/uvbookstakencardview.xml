<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="409dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/uvbtc_sno"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="SNo"

                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uvbtc_bookid"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Book ID"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uvbtc_bookname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Book Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uvbtc_authorname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Author Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uvbtc_issuedate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Issue Date"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uvbtc_returndate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Return Date"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/uvbtc_returnstatus"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbox"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Return Status"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/uvbtc_returnbtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="invisible"
                android:background="@drawable/returnbtn"
                android:layout_margin="2dp"/>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>