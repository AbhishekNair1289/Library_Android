<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Librarian.AddQPActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Add Previousyear Question Paper"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15sp"
        android:layout_below="@id/text4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject : "
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <AutoCompleteTextView
                android:id="@+id/aqp_subject"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:background="@drawable/edittextbg"
                android:layout_marginStart="10sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department : "
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <AutoCompleteTextView
                android:id="@+id/aqp_department"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextbg"
                android:layout_marginStart="10sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester : "
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <AutoCompleteTextView
                android:id="@+id/aqp_sem"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextbg"
                android:layout_marginStart="10sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year : "
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <AutoCompleteTextView
                android:id="@+id/aqp_year"
                android:layout_width="200sp"
                android:padding="5sp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextbg"
                android:layout_marginStart="10sp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextbg"
            android:layout_marginTop="50sp">
            <ImageButton
                android:id="@+id/aqp_attachfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/attach_file_icon"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/aqp_attachfiletxt"
                android:padding="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose file to upload"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10sp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/aqp_addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addbtnbg"
            android:layout_marginTop="50sp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/all_simpleProgressBar"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        />


</RelativeLayout>